<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
 
    <bean id="flightService" class="com.fbs.service.FlightServiceImpl">
        <property name="seats">
            <map>
                <entry key="FL123" value="5"/>
                <entry key="FL999" value="0"/>
            </map>
        </property>
    </bean>

    
    <bean id="ticketService" class="com.fbs.service.TicketService">
        <property name="flightService" ref="flightService"/>
    </bean>
 
</beans>